<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Auth Provider Name') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.oauth2.provider_name">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Well Known URL') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.oauth2.well_known_url">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Client ID') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.oauth2.client_id">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Client Secret') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.oauth2.client_secret">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Allow Insecure Transport (Octopi is not behind https)') }}</label>
        <div class="controls">
            <input type="checkbox" id="allow_insecure_transport" data-test-id="allow_insecure_transport" data-bind="checked: settings.plugins.oauth2.allow_insecure_transport">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Admin Group') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.oauth2.group_mapping.admin_group">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Operator Group') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.oauth2.group_mapping.operator_group">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Read Only Group') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.oauth2.group_mapping.readonly_group">
        </div>
    </div>
</form>